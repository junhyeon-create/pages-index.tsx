          <p className="text-lg mb-4">ğŸ’° ì”ê³ : <span className="font-bold text-green-400">{balance} ì½”ì¸</span></p>
          <div className="text-5xl mb-6">{slotResult}</div>
          <Button onClick={playSlot} className="bg-yellow-500 hover:bg-yellow-400 w-full">100ì½”ì¸ ë² íŒ…</Button>
        </CardContent>
      </Card>
    </div>
  );
}
